    <script src="script.js" defer>
        // JavaScript to resize the background dynamically
        function adjustBackground() {
            const body = document.body;
            const windowWidth = window.innerWidth;
            const windowHeight = window.innerHeight;
            body.style.backgroundSize = `${windowWidth}px ${windowHeight}px`; // Resize to match window size
        }

        // Add event listeners
        window.addEventListener('load', adjustBackground); // Adjust on page load
        window.addEventListener('resize', adjustBackground); // Adjust on window resize
    </script>
